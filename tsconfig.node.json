{

		"ts-node": {
			"esm":                             true,
			"experimentalSpecifierResolution": "node"
		},

  "compilerOptions": {
    "tsBuildInfoFile":                "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target":                         "ES2020",
    "lib":                            ["ES2020", "DOM", "DOM.Iterable", "ES2021.String"],
    "module":                         "ESNext",
    "skipLibCheck":                   true,
				"allowJs":                        true,
				"jsx":                            "preserve",

    /* Bundler mode */
    "moduleResolution":               "Bundler",
    "allowImportingTsExtensions":     true,
    "isolatedModules":                true,
    "moduleDetection":                "force",
    "noEmit":                         true,

    /* Linting */
    "strict":                         true,
    "noUnusedLocals":                 false, // m
    "noUnusedParameters":             false, // m
    "noFallthroughCasesInSwitch":     true,
    "noUncheckedSideEffectImports":   true,

				"baseUrl": ".",
				"paths": {
					"@/server/*":                     ["server/*"],
					"@/src/*":                        ["src/*"],
					"@/public/*":                     ["public/*"],
					"@/npm/*":                        ["node_modules/*"]
				},
  },
		"include": [
			"server/**/*.ts",
			"server/**/*.tsx",
			"server/**/*.js",
			"server/**/*.jsx",
			"server/**/*.cjs",
			"server/**/*.cjsx",
			"server/**/*.mts",
			"server/**/*.mtsx",
			"server/**/*.cts",
			"server/**/*.ctsx",
			"server/**/*.d.ts",
			"server/**/*.d.ts",

			"src/**/*.ts",
			"src/**/*.tsx",
			"src/**/*.js",
			"src/**/*.jsx",
			"src/**/*.cjs",
			"src/**/*.cjsx",
			"src/**/*.mts",
			"src/**/*.mtsx",
			"src/**/*.cts",
			"src/**/*.ctsx",
			"src/**/*.d.ts",

			"vite.config.js",
			"vite.config.cts",
			"vite.config.mts",
			"vite.config.ts",

			"postcss.config.js",
			"postcss.config.ts",
			"postcss.config.mts",
			"postcss.config.cts",

			"tailwind.config.ts",
			"tailwind.config.mts",
			"tailwind.config.cts"
		],
		"exclude": ["node_modules", "bower_components", "jspm_packages"]
}
